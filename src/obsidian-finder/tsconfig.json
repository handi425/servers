{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true
  },
  "include": ["*.ts", "lib/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
